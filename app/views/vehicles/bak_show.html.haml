- model_class = Vehicle
.page-header
  %h1= @vehicle.year_make_model_trim


- images = @vehicle.images.split("|")
#car-show-carousel.carousel.slide
  %ol.carousel-indicators
    -images.count.times do |i|
      %li{'data-target' => '#car-show-carousel', 'data-slide-to'=> (i-1).to_s}
  .carousel-inner
    - images.each do |image|
      .item
        =image_tag image
  %a.carousel-control.left{href: "#car-show-carousel", "data-slide" => "prev"} &lsaquo;
  %a.carousel-control.right{href: "#car-show-carousel", "data-slide" => "next"} &rsaquo;


