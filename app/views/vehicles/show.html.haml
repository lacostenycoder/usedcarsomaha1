- model_class = Vehicle
.page-header
  %h2= @vehicle.type + ' ' +@vehicle.year_make_model_trim
  %h3= 'in ' + @vehicle.dealership_city + ' ' + @vehicle.dealership_state
  %h3= '$' + number_with_delimiter(@vehicle.sale_price)
  %h3= 'Miles: ' + number_with_delimiter(@vehicle.mileage)

- images = @vehicle.images.split("|")
#car-show-carousel.carousel.slide
  %ol.carousel-indicators
    -images.count.times do |i|
      %li{'data-target' => '#car-show-carousel', 'data-slide-to'=> (i-1).to_s}
  .carousel-inner
    - images.each do |image|
      .item
        =image_tag image
  %a.carousel-control.left{href: "#car-show-carousel", "data-slide" => "prev"} &lsaquo;
  %a.carousel-control.right{href: "#car-show-carousel", "data-slide" => "next"} &rsaquo;

:coffeescript
  $('.carousel').carousel()
